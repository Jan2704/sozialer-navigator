---
import Layout from '../../layouts/Layout.astro';
import SchemaOrg from '../../components/SEO/SeoSchema.astro';
import CitySchemas from '../../components/CitySchemas.astro';
import ResultsSection from '../../components/ResultsSection.astro';
import { wohngeldData } from '../../data/wohngeldData.js';
import { targetGroups } from '../../data/targetGroups.js';
import { SmartCalculator } from '../../components/SmartCalculator.jsx';

export function getStaticPaths() {
  const cityPaths = wohngeldData.filter(item => item.slug).map((item) => ({ 
    params: { slug: item.slug },
    props: { info: item, type: 'city' },
  }));

  const groupPaths = targetGroups.map((item) => ({
    params: { slug: item.slug },
    props: { info: item, type: 'group' },
  }));

  return [...cityPaths, ...groupPaths];
}

const { info, type } = Astro.props;

// --- LOGIC SETUP ---
const isCity = type === 'city';
const isGroup = type === 'group';

// Default / Fallback values
let pageTitle = "";
let pageDesc = "";
let heroTitle = "";
let heroText = "";
let showCalculator = true;

// Vars for Calculator Defaults
let calcCity = "";
let calcMietstufe = 1;
let amtName = "Wohngeldbehörde";
let amtAdresse = "";

// Dynamic Content Variables
let faqItems = [];
let benefits = [];

if (isCity) {
    // === CITY CONFIG ===
    calcCity = info.stadt;
    calcMietstufe = info.mietstufe;
    amtName = info.amt_name || "Wohngeldbehörde";
    amtAdresse = info.amt_adresse;

    const currentYear = 2026;
    pageTitle = info.seo_title || `Wohngeldrechner ${calcCity} ${currentYear} | Anspruch prüfen`;
    pageDesc = info.seo_meta_desc || `Wohngeld Rechner für ${calcCity} (Mietstufe ${calcMietstufe}). Prüfen Sie Ihren Anspruch auf Mietzuschuss bei der ${amtName}. Aktuell für ${currentYear}.`;

    heroTitle = `Wohngeldrechner <br/> <span class="text-blue-400 not-italic">${calcCity}.</span>`;
    heroText = `Wohnen in ${calcCity} ist teuer. Prüfen Sie jetzt Ihren Anspruch auf Wohngeld. Unser Rechner berücksichtigt die lokale <strong>Mietstufe ${calcMietstufe}</strong> und die aktuellen Freibeträge für 2026.`;

    benefits = [
        { icon: "check", text: `<strong>Mietstufe ${calcMietstufe}:</strong> Korrekte Höchstbeträge für ${calcCity}.` },
        { icon: "check", text: "<strong>Aktuell:</strong> Datenstand 2026 berücksichtigt." }
    ];

    faqItems = [
        { q: `Wo beantrage ich Wohngeld in ${calcCity}?`, a: `Zuständig ist die ${amtName}. Sie können den Antrag dort schriftlich einreichen oder oft auch online stellen. Wichtig: Der Antrag gilt ab dem Monat der Einreichung.` },
        { q: `Welche Mietstufe hat ${calcCity}?`, a: `${calcCity} ist aktuell in die <strong>Mietstufe ${calcMietstufe}</strong> eingestuft. Das bedeutet, dass die Mietobergrenzen entsprechend angepasst sind. Unser Rechner berücksichtigt diesen Wert automatisch.` }
    ];

} else if (isGroup) {
    // === GROUP CONFIG ===
    calcCity = "Deine Stadt"; 
    calcMietstufe = 1; 

    pageTitle = info.title;
    pageDesc = info.meta_desc;
    heroTitle = info.hero_title;
    heroText = info.hero_text;

    benefits = info.benefits.map(b => ({
       icon: "check",
       text: `<strong>${b.title}:</strong> ${b.desc}`
    }));

    faqItems = info.faq;
}

const defaultCity = isCity ? {
    stadt: info.stadt,
    plz: info.plz || "", 
    mietstufe: info.mietstufe,
    amt_name: info.amt_name || "Wohngeldbehörde",
    amt_adresse: info.amt_adresse || "",
    amt_email: info.amt_email || ""
} : null;
---

<Layout title={pageTitle} description={pageDesc}>
    <fragment slot="head">
        <meta property="og:type" content="website" />
        <meta property="og:title" content={pageTitle} />
        <meta property="og:description" content={pageDesc} />
        <meta property="og:url" content={`https://sozialer-navigator.de/wohngeld/${info.slug}`} />

        <SchemaOrg type="Organization" />
        {isCity ? (
            <CitySchemas city={defaultCity} />
        ) : (
             <>
                <SchemaOrg 
                    type="TechnicalArticle" 
                    data={{
                        title: pageTitle,
                        description: pageDesc,
                        url: `https://sozialer-navigator.de/wohngeld/${info.slug}`,
                        datePublished: "2025-10-01",
                        dateModified: new Date().toISOString().split('T')[0]
                    }} 
                />
                 <SchemaOrg 
                    type="FAQPage" 
                    data={{ items: faqItems }} 
                />
            </>
        )}
        
        <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
        <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
        <script is:inline src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script is:inline src="https://unpkg.com/lucide@latest"></script>

        <style>
            .view-section { display: none; opacity: 0; }
            .view-section.active { display: block; opacity: 1; }
        </style>
    </fragment>

    <main class="min-h-screen bg-[#0F172A] text-slate-100 pt-32 pb-24 px-6 relative overflow-hidden">
        
        <!-- Background Elements -->
        <div class="absolute top-0 left-0 w-full h-[500px] bg-gradient-to-b from-blue-900/10 to-transparent pointer-events-none"></div>

        <section id="view-home" class="view-section active max-w-7xl mx-auto relative z-10">
            <div class="grid lg:grid-cols-2 gap-12 items-start">
                
                <!-- LEFT: Specific Content -->
                <div class="space-y-10 text-left pt-4 lg:sticky lg:top-32">
                    <div class="inline-flex items-center gap-2 bg-white/5 border border-white/10 px-4 py-1.5 rounded-full text-[10px] font-bold uppercase text-blue-300 tracking-widest">
                        {isCity ? <><i data-lucide="map-pin" class="w-3.5 h-3.5"></i> {calcCity}</> : <><i data-lucide={info.icon || "users"} class="w-3.5 h-3.5"></i> {info.short_title}</>}
                    </div>
                    
                    <h1 class="text-5xl md:text-7xl font-black text-white tracking-tighter leading-none italic" set:html={heroTitle}></h1>
                    
                    <div class="space-y-6 text-slate-400 font-medium leading-relaxed text-lg" set:html={heroText}></div>
                    
                    {isCity && (
                         <div class="space-y-6 text-slate-400 font-medium leading-relaxed text-lg">
                            <p>
                                Zuständig ist die {amtName}. Wir helfen Ihnen bei der Vorprüfung.
                            </p>
                        </div>
                    )}

                    <div class="space-y-4 pt-4">
                        <h3 class="text-xs font-black uppercase tracking-widest text-slate-500 mb-4">Ihre Vorteile</h3>
                        <ul class="space-y-3">
                            {benefits.map((b) => (
                                <li class="flex items-center gap-3 text-slate-300 font-medium">
                                    <div class="w-8 h-8 rounded-full bg-blue-500/20 flex items-center justify-center text-blue-400 shrink-0 border border-blue-500/20"><i data-lucide={b.icon || "check"} class="w-4 h-4"></i></div>
                                    <span set:html={b.text}></span>
                                </li>
                            ))}
                        </ul>
                    </div>
                </div>

                <!-- RIGHT: CALCULATOR (Shared) -->
                <div id="calculator" class="bg-[#1e293b]/50 backdrop-blur-xl border border-white/10 p-8 md:p-10 rounded-3xl shadow-2xl relative z-10 space-y-8">
                    <div class="border-b border-white/10 pb-6">
                        <h2 class="text-2xl font-black text-white italic mb-2">Anspruch prüfen</h2>
                        <p class="text-sm leading-relaxed text-slate-400 font-medium">
                            {isCity 
                                ? <><strong class="text-blue-400">Mietstufe {calcMietstufe}:</strong> Wir prüfen Ihren Anspruch.</>
                                : <>Nutzen Sie unseren Rechner für eine unverbindliche Ersteinschätzung.</>
                            }
                        </p>
                    </div>
                    
                    <SmartCalculator 
                        client:load 
                        benefitSlug="wohngeld" 
                        regelsatz={563} 
                        className="shadow-none border-none p-0 !bg-transparent text-white"
                        defaultCity={defaultCity}
                        theme="dark"
                    />
                </div>
            </div>

            <!-- FAQ SECTION -->
            <div class="max-w-3xl mx-auto space-y-8 text-left pt-24">
                <h3 class="text-3xl font-black text-white tracking-tight italic text-center">Häufige Fragen</h3>
                <div class="space-y-4">
                    {faqItems.map((item) => (
                        <details class="group bg-[#1e293b]/30 border border-white/5 rounded-2xl open:bg-[#1e293b]/50 transition-all">
                            <summary class="flex items-center justify-between p-6 cursor-pointer list-none font-bold text-slate-200">
                                <span>{item.q}</span>
                                <i data-lucide="chevron-down" class="w-5 h-5 text-slate-500 group-open:rotate-180 transition-transform"></i>
                            </summary>
                            <div class="px-6 pb-6 text-slate-400 leading-relaxed text-sm" set:html={item.a}></div>
                        </details>
                    ))}
                </div>
            </div>
        </section>

        <!-- VIEW: RESULTS -->
        <ResultsSection class="bg-[#0F172A]" />

    </main>
</Layout>