---
// index.astro - Sozialer Navigator 2026 - Calm Authority Edition
import { wohngeldData } from '../data/wohngeldData.js';
import { SmartCalculator } from '../components/SmartCalculator.jsx';
import ResultsSection from '../components/ResultsSection.astro';
import SchemaOrg from '../components/SEO/SeoSchema.astro';
import Layout from '../layouts/Layout.astro';

import '../styles/global.css';

const description = "Rechtlich fundierte Anspruchsprüfung für Wohngeld & Bürgergeld 2026. Anonym. Kostenlos. Ohne Registrierung.";
---

<Layout 
    title="Wohngeld & Bürgergeld 2026: Anspruch online prüfen | Sozialer Navigator"
    description={description}
    hideNav={false}
    class="bg-bg-base text-text-primary"
>

    <!-- SEO Meta & Schema -->
    <fragment slot="head">
        <meta property="og:type" content="website" />
        <meta property="og:title" content="Sozialer Navigator | Rechtliche Anspruchsprüfung 2026" />
        <meta property="og:description" content={description} />
        <meta property="og:image" content="/apple-touch-icon.png" />
        <meta property="og:url" content="https://sozialer-navigator.de/" />

        <SchemaOrg type="Organization" />
        <SchemaOrg type="Website" />
        <SchemaOrg type="SoftwareApplication" />
        
        <script is:inline src="/scripts/lucide.min.js"></script>
        
        <script>
            import { gsap } from 'gsap';
            import { ScrollTrigger } from 'gsap/ScrollTrigger';
            import Chart from 'chart.js/auto';

            gsap.registerPlugin(ScrollTrigger);

            window.Chart = Chart;
            window.gsap = gsap;
            window.ScrollTrigger = ScrollTrigger;

            if (window.lucide) {
                window.lucide.createIcons();
            }
            
            document.addEventListener('astro:page-load', () => {
                if (window.lucide) window.lucide.createIcons();
            });
        </script>
        
        <style>
            /* View Transitions */
            .view-section { display: none; opacity: 0; transition: opacity 0.4s ease-in-out; }
            .view-section.active { display: block; opacity: 1; }
        </style>
    </fragment>

    <main class="min-h-screen relative pt-0 pb-32 text-slate-100">

        <!-- VIEW 1: HOME -->
        <section id="view-home" class="view-section active w-full relative z-10">
             
            <!-- HERO SECTION (Dark/Image Background) -->
            <div class="relative w-full min-h-[90vh] flex items-center justify-center overflow-hidden animate-slide-up">
                
                <!-- Hero Background Image (Scoped to this section) -->
                <div class="absolute inset-0 z-0">
                    <img src="/images/hero-humanity.png" alt="Sozialer Navigator Hintergrund" class="w-full h-full object-cover" />
                    <!-- Dark Gradient Overlay for text readability -->
                    <div class="absolute inset-0 bg-gradient-to-r from-[#0F172A] via-[#0F172A]/70 to-[#1e293b]/40 mix-blend-multiply"></div>
                    <div class="absolute inset-0 bg-black/20"></div>
                </div>

                <div class="relative z-10 w-full max-w-6xl mx-auto px-6 text-center md:text-left flex flex-col md:flex-row items-center gap-12"> 
                    
                    <div class="md:w-3/5 pt-20">
                        <h1 class="font-bold tracking-tight mb-8 text-white text-5xl lg:text-7xl leading-[1.05]">
                            Menschlichkeit bewegt. <br />
                            <span class="text-blue-300">Wir bewegen Bürokratie.</span>
                        </h1>
                        
                        <p class="text-xl md:text-2xl text-slate-100 leading-relaxed mb-12 text-balance max-w-2xl drop-shadow-md">
                           Dein Anspruch auf Wohngeld & Bürgergeld. Wir kämpfen für dein Recht – einfach, verständlich & von Menschen für Menschen.
                        </p>

                         <a href="#calculator" class="calm-btn-primary shadow-lg shadow-blue-500/30 text-lg px-10 py-5 rounded-full hover:scale-105 transition-transform">
                            Jetzt Anspruch prüfen
                         </a>
                    </div>
                </div>
            </div>

            <!-- SECTION: WER SIND WIR (Light Background) -->
            <div class="w-full bg-white py-24 border-b border-slate-100">
                <div class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row items-center gap-16">
                    <div class="md:w-1/2 relative group">
                        <div class="absolute inset-0 bg-blue-100 rounded-2xl transform rotate-3 transition-transform group-hover:rotate-6"></div>
                        <div class="relative rounded-2xl overflow-hidden shadow-xl border border-slate-100 aspect-video">
                            <img src="/images/initiative_abstract.png" alt="Sozialer Navigator Initiative" class="w-full h-full object-cover" />
                        </div>
                    </div>
                    <div class="md:w-1/2 text-slate-900">
                        <span class="text-blue-600 font-bold tracking-widest text-xs uppercase mb-4 block">Wer wir sind</span>
                        <h2 class="text-3xl md:text-5xl font-bold text-slate-900 mb-8">Unabhängig & Engagiert.</h2>
                        <p class="text-slate-600 text-lg leading-relaxed mb-6">
                           Der Soziale Navigator ist eine unabhängige Initiative. Unser Ziel: Soziale Sicherheit durch digitale Klarheit.
                        </p>
                        <p class="text-slate-500 leading-relaxed">
                            Wir helfen dir, deine Rechte zu verstehen – ohne bürokratische Hürden. Wir verbinden Herz mit Technologie, um dir zu deinem Recht zu verhelfen.
                        </p>
                    </div>
                </div>
            </div>

            <!-- SECTION: WARUM SOZIALER NAVIGATOR (Light Neutral Background) -->
            <div class="w-full bg-slate-50 py-32">
                <div class="max-w-6xl mx-auto px-6">
                    <div class="text-center mb-20">
                         <span class="text-blue-600 font-bold tracking-widest text-xs uppercase mb-4 block">Warum Sozialer Navigator</span>
                         <h2 class="text-3xl md:text-5xl font-bold text-slate-900">Deine Vorteile bei uns</h2>
                    </div>

                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                         <!-- Benefit 1 -->
                         <div class="calm-card p-8 bg-white border border-slate-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group rounded-2xl">
                             <div class="w-14 h-14 flex items-center justify-center rounded-2xl bg-blue-50 text-blue-600 mb-6 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                                <i data-lucide="users" class="w-7 h-7"></i>
                             </div>
                             <h3 class="text-xl font-bold text-slate-900 mb-3">Persönlich & Nah</h3>
                             <p class="text-slate-600 leading-relaxed text-sm">Wir verstecken uns nicht hinter Paragraphen. Wir erklären dir alles in einfacher Sprache.</p>
                         </div>

                         <!-- Benefit 2 -->
                         <div class="calm-card p-8 bg-white border border-slate-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group rounded-2xl">
                             <div class="w-14 h-14 flex items-center justify-center rounded-2xl bg-blue-50 text-blue-600 mb-6 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                                <i data-lucide="shield" class="w-7 h-7"></i>
                             </div>
                             <h3 class="text-xl font-bold text-slate-900 mb-3">Anonym & Sicher</h3>
                             <p class="text-slate-600 leading-relaxed text-sm">Deine Daten gehören dir. Wir prüfen deinen Anspruch komplett anonym im Browser.</p>
                         </div>

                         <!-- Benefit 3 -->
                         <div class="calm-card p-8 bg-white border border-slate-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group rounded-2xl">
                             <div class="w-14 h-14 flex items-center justify-center rounded-2xl bg-blue-50 text-blue-600 mb-6 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                                 <i data-lucide="check-circle" class="w-7 h-7"></i>
                             </div>
                             <h3 class="text-xl font-bold text-slate-900 mb-3">Rechtlich Aktuell</h3>
                             <p class="text-slate-600 leading-relaxed text-sm">Verlass dich drauf: Wir basieren auf den aktuellsten Gesetzen für 2026.</p>
                         </div>

                         <!-- Benefit 4 -->
                         <div class="calm-card p-8 bg-white border border-slate-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group rounded-2xl">
                             <div class="w-14 h-14 flex items-center justify-center rounded-2xl bg-blue-50 text-blue-600 mb-6 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                                 <i data-lucide="zap" class="w-7 h-7"></i>
                             </div>
                             <h3 class="text-xl font-bold text-slate-900 mb-3">Schnell & Digital</h3>
                             <p class="text-slate-600 leading-relaxed text-sm">Kein Papierkram, kein Warten. Du erhältst dein Ergebnis in wenigen Minuten.</p>
                         </div>

                        <!-- Benefit 5 -->
                         <div class="calm-card p-8 bg-white border border-slate-100 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all duration-300 group rounded-2xl md:col-span-2 lg:col-span-2">
                             <div class="flex flex-col md:flex-row gap-6 items-start md:items-center">
                                 <div class="w-14 h-14 flex items-center justify-center rounded-2xl bg-blue-50 text-blue-600 shrink-0 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                                     <i data-lucide="heart-handshake" class="w-7 h-7"></i>
                                 </div>
                                 <div>
                                     <h3 class="text-xl font-bold text-slate-900 mb-2">Barrierefrei & Fair</h3>
                                     <p class="text-slate-600 leading-relaxed text-sm">
                                         Soziale Sicherheit darf keine Frage der Bildung sein. Wir brechen die Barrieren zwischen Gesetz und Mensch.
                                     </p>
                                 </div>
                             </div>
                         </div>
                    </div>
                </div>
            </div>

            <!-- EXPLANATION SECTION -->
            <div class="w-full bg-slate-50 border-t border-slate-100 pt-24 pb-12">
                <div class="max-w-4xl mx-auto px-6 text-center">
                    <span class="text-blue-600 font-bold tracking-widest text-xs uppercase mb-4 block">So funktioniert es</span>
                    <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-6">Dein Weg zur Klarheit</h2>
                    <p class="text-slate-600 text-lg leading-relaxed mb-16 max-w-2xl mx-auto">
                        In nur drei Schritten prüfen wir deinen Anspruch auf staatliche Unterstützung. Anonym, sicher und basierend auf den aktuellen Gesetzen für 2026.
                    </p>

                    <div class="grid md:grid-cols-3 gap-8 text-left">
                        <!-- Step 1 -->
                        <div class="relative pl-4 border-l-2 border-blue-200">
                             <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-blue-500 border-4 border-white shadow-sm"></div>
                             <h4 class="font-bold text-slate-900 text-lg mb-2">1. Angaben machen</h4>
                             <p class="text-sm text-slate-600 leading-relaxed">
                                 Gib deine Einkommens- und Wohnsituation ein. Keine Sorge: Wir fragen nur das Nötigste und keine Namen.
                             </p>
                        </div>

                        <!-- Step 2 -->
                        <div class="relative pl-4 border-l-2 border-blue-200">
                             <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-blue-500 border-4 border-white shadow-sm"></div>
                             <h4 class="font-bold text-slate-900 text-lg mb-2">2. Analyse</h4>
                             <p class="text-sm text-slate-600 leading-relaxed">
                                 Unser Algorithmus prüft im Hintergrund, ob dir Wohngeld, Bürgergeld oder Kinderzuschlag zusteht.
                             </p>
                        </div>

                        <!-- Step 3 -->
                        <div class="relative pl-4 border-l-2 border-blue-200">
                             <div class="absolute -left-[9px] top-0 w-4 h-4 rounded-full bg-blue-500 border-4 border-white shadow-sm"></div>
                             <h4 class="font-bold text-slate-900 text-lg mb-2">3. Ergebnis & Hilfe</h4>
                             <p class="text-sm text-slate-600 leading-relaxed">
                                 Du erhältst sofort eine Einschätzung und konkrete Handlungsempfehlungen für deinen Antrag.
                             </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- CALCULATOR SECTION (White Background) -->
            <div class="w-full bg-slate-50 pb-32 pt-12">
                <div id="calculator" class="max-w-5xl mx-auto px-6 scroll-mt-32">
                    <div class="calm-card p-0 overflow-hidden relative shadow-xl bg-white border border-slate-200">
                        
                        <!-- Header -->
                        <div class="px-8 py-6 calm-divider bg-slate-50 border-b border-slate-100 flex justify-between items-center">
                             <div>
                                 <h2 class="text-lg font-bold text-slate-900">Anspruchsprüfung starten</h2>
                             </div>
                             <div class="text-xs text-slate-500 font-medium flex items-center gap-2">
                                 <i data-lucide="lock" class="w-3 h-3"></i>
                                 Privat & Anonym
                             </div>
                        </div>
                        
                        <!-- Calculator Component Wrapper -->
                        <div class="p-6 md:p-12 bg-white">
                            <SmartCalculator client:load theme="light" />
                        </div>
                        
                        <!-- Footer Info -->
                        <div class="px-8 py-5 bg-slate-50 border-t border-slate-100 calm-divider text-center">
                            <p class="text-xs text-slate-500">
                                Wir speichern keine persönlichen Daten. Die Berechnung erfolgt direkt in deinem Browser.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

        </section>

        <!-- VIEW: RESULTS (via Component) -->
        <ResultsSection />

    </main>

    <!-- NOTIFICATION -->
    <div id="notification-toast" class="bg-[#1e293b] text-white px-6 py-4 rounded-xl shadow-lg border border-white/10 flex items-center gap-4 fixed bottom-6 left-1/2 -translate-x-1/2 z-[300] hidden transform translate-y-4 opacity-0 transition-all">
        <i data-lucide="check-circle" class="text-emerald-400"></i>
        <span id="toast-message" class="font-medium text-sm">Status aktualisiert.</span>
    </div>

    <!-- COOKIE BANNER (Dark) -->
    <div id="cookie-banner" class="fixed bottom-0 left-0 right-0 bg-[#0F172A]/95 backdrop-blur-xl border-t border-white/10 p-6 z-50 hidden flex-col md:flex-row items-center justify-between gap-6 shadow-2xl transform translate-y-full transition-transform duration-500">
        <div class="text-sm text-slate-300 font-medium max-w-2xl">
            <p><strong>Datenschutz-Hinweis:</strong> Wir nutzen Cookies für die technische Funktionalität. Es werden keine persönlichen Daten ohne Ihre explizite Handlung gespeichert.</p>
        </div>
        <div class="flex gap-4 shrink-0">
            <button onclick="acceptCookies()" class="bg-white text-[#0F172A] px-6 py-2.5 rounded-lg text-xs font-bold uppercase tracking-widest hover:bg-slate-200 transition-colors">
                Akzeptieren
            </button>
            <button onclick="declineCookies()" class="text-slate-400 hover:text-white text-xs font-bold uppercase tracking-widest transition-colors px-4 py-2.5">
                Nur Essenzielle
            </button>
        </div>
    </div>

    <script is:inline define:vars={{ cityData: wohngeldData }}>
        window.cityData = cityData;
    </script>
    
    <script>
    import { gsap } from 'gsap';
    import { ScrollTrigger } from 'gsap/ScrollTrigger';

    // View Switching Logic (Consolidated)
    if (!window.showView) {
        window.showView = (viewId) => {
            document.querySelectorAll('.view-section').forEach(el => {
                el.classList.remove('active');
                setTimeout(() => el.style.display = 'none', 400);
            });
            const target = document.getElementById('view-' + viewId);
            if(target) {
                target.style.display = 'block';
                // Force reflow
                void target.offsetWidth;
                target.classList.add('active');
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }
        };
    }

    if (!window.goBack) {
        window.goBack = () => {
             window.showView('home');
        };
    }
    
    // Cookie Logic
    window.acceptCookies = () => {
        localStorage.setItem('cookieConsent', 'granted');
        const banner = document.getElementById('cookie-banner');
        if(banner) banner.classList.add('hidden');
    };

    window.declineCookies = () => {
        localStorage.setItem('cookieConsent', 'denied');
        const banner = document.getElementById('cookie-banner');
        if(banner) banner.classList.add('hidden');
    };

    document.addEventListener('DOMContentLoaded', () => {
        const consent = localStorage.getItem('cookieConsent');
        if (consent === null) {
            const banner = document.getElementById('cookie-banner');
            if(banner) {
                banner.classList.remove('hidden');
                requestAnimationFrame(() => banner.classList.remove('translate-y-full'));
            }
        }
    });
    </script>

</Layout>