---
import Layout from '../layouts/Layout.astro';
import { ProCard } from '../components/premium/ProCard';
import { ProButton } from '../components/premium/ProButton';
import { ProInput } from '../components/premium/ProInput';
import { Sparkles, ArrowRight, ShieldCheck } from 'lucide-react';

const title = "Premium Trust UI System";
// Force client load for React components to enable interactions/animations
---

<Layout title={title} description="Showcase of the Premium Trust UI Library">
  <main class="min-h-screen bg-slate-50 py-24 px-6 md:px-12">
    
    <div class="max-w-7xl mx-auto space-y-24">
      
      <!-- HEADER -->
      <div class="space-y-6 text-center max-w-2xl mx-auto">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white border border-slate-200 shadow-sm text-xs font-bold uppercase tracking-widest text-brand-blue">
          <Sparkles className="w-4 h-4" />
          <span>Premium Trust Library</span>
        </div>
        <h1 class="text-5xl md:text-7xl font-black text-brand-slate tracking-tighter">
          Design System <span class="text-brand-blue">v1.0</span>
        </h1>
        <p class="text-lg text-slate-500 font-medium leading-relaxed">
          Eine Kollektion von Komponenten, die Vertrauen, Klarheit und Performance ausstrahlen. Optimiert für Mobile & Accessibility.
        </p>
      </div>

      <!-- SECTION: PRO CARDS -->
      <section class="space-y-12">
        <div class="flex items-end justify-between border-b border-slate-200 pb-6">
          <h2 class="text-3xl font-bold text-slate-900 tracking-tight">01. Pro Cards</h2>
          <span class="text-slate-400 font-mono text-sm">src/components/premium/ProCard.tsx</span>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Default Card -->
          <ProCard client:load className="p-8">
            <div class="w-12 h-12 bg-blue-50 rounded-2xl flex items-center justify-center text-brand-blue mb-6">
              <ShieldCheck className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-2">Standard Card</h3>
            <p class="text-slate-500 text-sm leading-relaxed">
              Perfekt für Features und Highlights. Nutzt weiche Schatten und Skalierung bei Hover.
            </p>
          </ProCard>

          <!-- Gradient Card -->
          <ProCard client:load gradient className="p-8">
            <div class="w-12 h-12 bg-white shadow-sm rounded-2xl flex items-center justify-center text-brand-slate mb-6">
              <Sparkles className="w-6 h-6" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 mb-2">Gradient Card</h3>
            <p class="text-slate-500 text-sm leading-relaxed">
              Subtiler Verlauf für mehr Tiefe. Ideal um wichtige Inhalte hervorzuheben.
            </p>
          </ProCard>

           <!-- Custom Content -->
           <ProCard client:load className="p-0 flex flex-col justify-between overflow-hidden bg-brand-slate text-white">
            <div class="p-8">
              <h3 class="text-xl font-bold mb-2">Dark Mode</h3>
              <p class="text-slate-400 text-sm">
                Funktioniert auch hervorragend mit dunklen Hintergründen.
              </p>
            </div>
            <div class="h-2 bg-gradient-to-r from-brand-blue to-purple-500 w-full"></div>
          </ProCard>
        </div>
      </section>

      <!-- SECTION: PRO BUTTONS -->
      <section class="space-y-12">
        <div class="flex items-end justify-between border-b border-slate-200 pb-6">
          <h2 class="text-3xl font-bold text-slate-900 tracking-tight">02. Pro Buttons</h2>
          <span class="text-slate-400 font-mono text-sm">src/components/premium/ProButton.tsx</span>
        </div>

        <div class="space-y-8 p-12 bg-white rounded-[2.5rem] shadow-sm border border-slate-100">
           
           <div class="grid grid-cols-2 md:grid-cols-4 gap-6 items-center place-items-center">
              <ProButton client:load>Primary Button</ProButton>
              <ProButton client:load variant="secondary">Secondary</ProButton>
              <ProButton client:load variant="outline">Outline</ProButton>
              <ProButton client:load variant="ghost">Ghost Button</ProButton>
           </div>

           <div class="grid grid-cols-2 md:grid-cols-4 gap-6 items-center place-items-center pt-8 border-t border-slate-50">
              <ProButton client:load size="sm">Small</ProButton>
              <ProButton client:load>With Icon (Coming Soon)</ProButton>
              <ProButton client:load isLoading>Loading...</ProButton>
              <ProButton client:load disabled>Disabled</ProButton>
           </div>

        </div>
      </section>

       <!-- SECTION: PRO INPUTS -->
       <section class="space-y-12">
        <div class="flex items-end justify-between border-b border-slate-200 pb-6">
          <h2 class="text-3xl font-bold text-slate-900 tracking-tight">03. Pro Inputs</h2>
          <span class="text-slate-400 font-mono text-sm">src/components/premium/ProInput.tsx</span>
        </div>

        <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
            <ProCard client:load className="p-8 space-y-6">
                 <h4 class="font-bold text-slate-900">Interactive States</h4>
                 <ProInput client:load label="Vorname" placeholder="Max" />
                 <ProInput client:load label="E-Mail Adresse" type="email" placeholder="max@muster.de" />
            </ProCard>

            <ProCard client:load className="p-8 space-y-6">
                <h4 class="font-bold text-slate-900">Validation States</h4>
                 <ProInput client:load label="Passwort" type="password" value="secret" />
                 <ProInput client:load label="Postleitzahl" value="ABC" error="Ungültige PLZ" />
            </ProCard>
        </div>
      </section>

    </div>
  </main>
</Layout>
