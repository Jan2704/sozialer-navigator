---
// src/layouts/Layout.astro

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Sozialer Navigator - Ihre rechtssichere Hilfe für 2026" } = Astro.props;
---
<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap" rel="stylesheet">
    <title>{title}</title>
    
    <!-- Tailwind CDN (Konsistent mit Startseite) -->
    <script is:inline src="https://cdn.tailwindcss.com"></script>
    <script is:inline>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: { sans: ['Inter', 'system-ui', 'sans-serif'] },
                    colors: {
                        brand: {
                            base: '#f8fafc',
                            indigo: '#4f46e5',
                            slate: '#0f172a',
                            blue: '#2563eb',
                            border: '#e2e8f0'
                        }
                    }
                }
            }
        }
    </script>
    <style is:global>
        body { background-color: #f8fafc; color: #0f172a; font-family: 'Inter', sans-serif; }
        
        /* Styling für Rechtstexte */
        .prose h1 { font-weight: 900; font-size: 2.5rem; margin-bottom: 2rem; color: #0f172a; letter-spacing: -0.05em; font-style: italic; }
        .prose h2 { font-weight: 800; font-size: 1.5rem; margin-top: 3rem; margin-bottom: 1rem; color: #0f172a; }
        .prose h3 { font-weight: 700; font-size: 1.25rem; margin-top: 2rem; margin-bottom: 0.75rem; color: #0f172a; }
        .prose p { margin-bottom: 1rem; line-height: 1.7; color: #475569; }
        .prose a { color: #2563eb; font-weight: 600; text-decoration: underline; text-decoration-color: #bfdbfe; text-underline-offset: 4px; }
        .prose a:hover { color: #0f172a; text-decoration-color: #2563eb; }
    </style>
  </head>
  <body class="bg-brand-base antialiased text-brand-slate font-sans">
    <slot />
  </body>
</html>