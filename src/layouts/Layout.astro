---
// src/layouts/Layout.astro
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  hideNav?: boolean;
  class?: string;
}

const { title, description = "Sozialer Navigator - Ihre rechtssichere Hilfe für 2026", hideNav = false } = Astro.props;
---
<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={new URL(Astro.url.pathname.replace(/(\/index)?\.html$/, '').replace(/\/?$/, '/'), Astro.site)} />
    <title>{title}</title>
    
    <!-- Lucide Icons -->
    <!-- Lucide Icons removed: using react-lucide or inline SVGs for privacy -->
    
    <style is:global>
        /* Styling für Rechtstexte */
        .prose h1 { font-weight: 900; font-size: 2.5rem; margin-bottom: 2rem; color: #0f172a; letter-spacing: -0.05em; font-style: italic; }
        .prose h2 { font-weight: 800; font-size: 1.5rem; margin-top: 3rem; margin-bottom: 1rem; color: #0f172a; }
        .prose h3 { font-weight: 700; font-size: 1.25rem; margin-top: 2rem; margin-bottom: 0.75rem; color: #0f172a; }
        .prose p { margin-bottom: 1rem; line-height: 1.7; color: #475569; }
        .prose a { color: #2563eb; font-weight: 600; text-decoration: underline; text-decoration-color: #bfdbfe; text-underline-offset: 4px; }
        .prose a:hover { color: #0f172a; text-decoration-color: #2563eb; }
    </style>
    <slot name="head" />
  </head>
  <body class={`antialiased font-sans flex flex-col min-h-screen ${Astro.props.class || 'bg-brand-base text-brand-slate'}`}>
    {!hideNav && <Nav />}
    <div class="flex-grow">
      <slot />
    </div>
    <Footer />
  </body>
</html>