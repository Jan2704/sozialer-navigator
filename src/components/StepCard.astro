---
interface Props {
  number: string;
  title: string;
  description: string;
}
const { number, title, description } = Astro.props;
---
<div class="rounded-lg border bg-card text-card-foreground shadow-sm">
  <div class="flex flex-col space-y-1.5 p-6">
    <div class="w-12 h-12 bg-gradient-to-br from-blue-600 to-indigo-700 text-white rounded-2xl flex items-center justify-center font-black mb-6 text-lg shadow-lg shadow-blue-500/20">
      {number}
    </div>
    <h3 class="text-2xl font-semibold leading-none tracking-tight">{title}</h3>
    <p class="text-sm text-muted-foreground">{description}</p>
  </div>
</div>