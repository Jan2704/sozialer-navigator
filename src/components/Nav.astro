---
// src/components/Nav.astro
interface Props {
  cityName?: string;
  citySlug?: string;
}
const { cityName, citySlug } = Astro.props;
---

<header class="sn-header">
  <div class="sn-container">

    <a href="/" class="sn-logo">
      <span class="sn-logo-title">Sozialer Navigator</span>
      <span class="sn-logo-sub">Orientierung & Hilfe</span>
    </a>

    <nav class="sn-nav">
      <a href="/buergergeld-grundsicherung">B√ºrgergeld</a>
      <a href="/wohngeld">Wohngeld</a>
      <a href="/rechner">Rechner</a>
      <a href="/hilfe">Hilfe</a>
    </nav>

    <div class="sn-action">
      {cityName ? (
        <span class="sn-city-tag">üìç {cityName}</span>
      ) : (
        <a href="/anspruch-pruefen" class="sn-cta">
          Check
        </a>
      )}
    </div>

  </div>
</header>

<style>
  .sn-header {
    background: #ffffff;
    border-bottom: 1px solid var(--sn-border);
    position: sticky;
    top: 0;
    z-index: 1000;
    height: 70px; /* Etwas kompakter f√ºr modernere Optik */
    display: flex;
    align-items: center;
  }

  .sn-container {
    display: grid;
    /* Wir geben der Mitte (Nav) genau den Platz, den sie braucht */
    grid-template-columns: auto 1fr auto; 
    align-items: center;
    gap: 1.5rem; /* Gap reduziert von 2rem */
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .sn-logo { text-decoration: none; display: flex; flex-direction: column; min-width: 160px; }
  .sn-logo-title { font-size: 1.05rem; font-weight: 800; color: var(--sn-zinc-950); line-height: 1.1; }
  .sn-logo-sub { font-size: 0.7rem; color: var(--sn-zinc-600); }

  .sn-nav { 
    display: flex; 
    justify-content: center; 
    gap: 1.25rem; /* Engerer Abstand zwischen den Links */
  }
  
  .sn-nav a { 
    text-decoration: none; 
    font-size: 0.9rem; /* Leicht verkleinert */
    color: var(--sn-zinc-600); 
    font-weight: 600; 
    transition: color 0.1s;
    white-space: nowrap; /* Verhindert Zeilenumbruch im Link */
  }
  .sn-nav a:hover { color: var(--sn-zinc-950); }

  .sn-action { display: flex; justify-content: flex-end; min-width: 120px; }
  
  .sn-cta {
    background: var(--sn-blue);
    color: #fff;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 700;
    font-size: 0.85rem;
  }
  
  .sn-city-tag { font-size: 0.75rem; font-weight: 700; background: var(--sn-bg-soft); padding: 4px 12px; border-radius: 100px; }

  @media (max-width: 1024px) {
    .sn-nav { gap: 0.75rem; }
    .sn-nav a { font-size: 0.85rem; }
  }

  @media (max-width: 900px) {
    .sn-nav { display: none; }
    .sn-container { grid-template-columns: 1fr auto; }
  }
</style>